@model PatientModel
@{
    Layout = "_formpages";
    ViewData["Title"] = "Patient Request";
}
<!doctype html>
<html lang="en" style="width:100%;">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/PatientRequestCSS.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</head>

<body>
    <partial name="_ValidationScriptsPartial"/>
    <div class="row justify-content-end">
        <div class="col-2">
            <button class="btn btn-outline-info backbtn mt-3" onclick="window.history.back(-1)" style="width:auto">
                <div>
                    <img src="/SRS Screen Shorts/go-back-2.svg" alt="" width="25px">Back
                </div>
            </button>
        </div>
    </div>
    <br>
    <div class="row mb-4 d-flex justify-content-center ">
        <div class="col-11 col-sm-10 col-md-9 col-lg-8 shadow-lg">
            <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="row ">
                    <h5 for="" class="mt-4">Patient Information</h5>
                </div>
                <div class="row mt-4">
                    <div class="col form-floating ">
                        <textarea asp-for="Symptoms" class="PatientInputs form-control" id="forfloatingtextarea"
                                  placeholder="Enter Brief Details Of Symptoms(Optional)" style="height: 15vh;" cols="20"
                                  rows="5"></textarea>
                        <label for="forfloatingtextarea" class="ms-2">Enter Brief Details Of Symptoms(Optional)</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-4 col-sm-6 form-floating ">
                        <input type="text" asp-for="FirstName" placeholder="First Name" class="PatientInputs form-control" id="fname">
                        <label for="fname" class="ms-2">First Name</label>
                        <span class="validation" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-12 col-sm-6 mt-4 form-floating  ">
                        <input type="text" asp-for="LastName" placeholder="Last Name" class="PatientInputs form-control" id="lname">
                        <label for="lname" class="ms-2">Last Name</label>
                        <span class="validation" asp-validation-for="LastName"></span>

                    </div>
                </div>
                <div class="row ">
                    <div class="col-12 col-sm-6  mt-4 form-floating">
                        <input type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-100).ToString()" asp-for="DateOfBirth" placeholder="Date Of Birth" class="PatientInputs form-control" id="DOB">
                        <label for="DOB" class="ms-2">Date Of Birth</label>
                        <span class="validation" asp-validation-for="DateOfBirth"></span>
                    </div>
                </div>
                <div class="row mt-4">
                    <h5>Patient Contact Information</h5>
                </div>
                <div class="row ">
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="email" asp-for="Email" placeholder="Email" class="PatientInputs form-control" id="emailfloat">
                            <label for="emailfloat">Email</label>
                            <span class="validation" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 mt-4 ">

                        <div class="form-floating ">
                            <input asp-for="@Model.CountryCode" id="flag" hidden />
                            <input id="phone" asp-for="PhoneNo" class="PatientInputs form-control" type="tel" autocomplete="off" />
                            <span class="validation" asp-validation-for="PhoneNo"></span>
                        </div>
                    </div>
                </div>
                <div class="row " id="hiddendiv" style="display:none">
                    <br />
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="password" asp-for="Password" placeholder="Password" class="PatientInputs form-control" id="passwordfloat">
                            <label for="passwordfloat">Enter Password</label>
                            <span class="validation" asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 mt-4 ">
                        <div class="form-floating ">
                            <input id="confirmpass" asp-for="ConfirmPass" placeholder="Confirm Password" class="PatientInputs form-control" type="password" />
                            <label for="confirmpass">Confirm Password</label>
                            <span class="validation" asp-validation-for="ConfirmPass"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <h5>Patient Location</h5>
                </div>
                <div class="row ">
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="text" asp-for="Street" class="PatientInputs form-control" id="floatingEmail" placeholder="Street ">
                            <label for="floatingEmail">Street</label>
                        </div>

                    </div>
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="text" asp-for="City" class="PatientInputs form-control" id="floatingCity" placeholder="City">
                            <label for="floatingCity">City</label>
                        </div>
                    </div>
                </div>

                <div class="row ">
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            @* <input type="text" asp-for="State" class="PatientInputs form-control" id="floatingState" placeholder="state">
                            <label for="floatingState">State</label> *@
                            @* ---------------------------------------------------------------------------------------------------------------- *@
                            <div class="form-floating">
                                <select class="form-select" asp-for="State" id="floatingState" aria-label="Floating label select example">
                                    <option selected disabled value="0">Select Your State</option>
                                    @for (int i = 0; i < Model.Regions.Count; i++)
                                    {
                                        <option value="@Model.Regions[i].Regionid">@Model.Regions[i].Name</option>
                                    }
                                </select>
                                <label for="floatingState">State</label>
                            </div>
                            @* ---------------------------------------------------------------------------------------------------------------- *@
                            <span class="validation" asp-validation-for="State"></span>

                        </div>
                    </div>
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="text" asp-for="ZipCode" class="PatientInputs form-control" id="floatingZip" placeholder="zip">
                            <label for="floatingZip">Zip Code</label>
                            <span class="validation" asp-validation-for="ZipCode"></span>
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-12 col-sm-6 mt-4">
                        <div class="form-floating">
                            <input type="text" asp-for="RoomSuite" class="PatientInputs form-control" id="floatingRoom" placeholder="Room">
                            <label for="floatingRoom">Room # / Suite (Optional)</label>
                            <span class="validation" asp-validation-for="RoomSuite"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <h5>(Optional) Upload Photo or Document</h5>
                </div>
                <div class="row ">

                    <div class="mb-3">
                        <input asp-for="File" class=" col-12 form-control" type="file" id="file_input_id" multiple style="opacity:0;height:0;">
                        <div class="input-group">
                            <input type="text" id="text_input_id" class="py-2 col-12 form-control" placeholder="Select File"
                                   style="caret-color: transparent" autocomplete="off" />
                            <span class="input-group-text" id="text_input_span_id " style="background-color: #10bce9;">
                                <label for="file_input_id" class=" py-2 ms-1 text-white">Upload</label>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row text-end">
                    <div class="">
                        <button type="submit" onclick="changeCountryCode()" class=" p-3 m-2 btn  btn-info text-light">
                            Submit
                        </button>
                        <button type="reset" class="p-3 m-2 btn btn-outline-info">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#emailfloat').on('blur', function () {
                var email = $(this).val();
                $.ajax({
                    url: '/Guest/CheckEmail',
                    type: 'POST',
                    data: { email: email },
                    success: function (data) {
                        if (!data.exists) {
                            $('#hiddendiv').show();
                        }
                        else {
                            $('#hiddendiv').hide();
                        }
                    }
                });
            });
        });
    </script>
    <script>
        // bind file-input-form click action to text-input-span
        $('#text_input_span_id').click(function () {
            $("#file_input_id").trigger('click');
        })
        // bind file-input-form click action to text-input-form
        $('#text_input_id').click(function () {
            $("#file_input_id").trigger('click');
        })
        // display file name in text-input-form
        $("#file_input_id").change(function () {
            $('#text_input_id').val(this.value.replace(/C:\\fakepath\\/i, ''))
        })
    </script>
    <script>
        let phoneInputField = document.querySelector("#phone");
        let phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
            preferredCountries: ["in"],
            separateDialCode: true,
            initialCountry: "in"
        });
        function changeCountryCode() {
            let countryCode = document.getElementById("flag");
            countryCode.value = phoneInput.getSelectedCountryData().dialCode;
        }
    </script>
</body>
</html>
