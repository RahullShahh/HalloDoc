@model ForgotPasswordViewModel
@{
    Layout = "_login_and_forgotpassword";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid row">
        <div class="col-12">
            <div class="background"> </div>
            <div class="row  justify-content-end">
                <div class="col-1">
                    <button class="btn btn-outline-info" onclick="darkMode()">
                        <img src="/SRS Screen Shorts/dark_mode_black_24dp.svg" alt="">
                    </button>
                </div>
            </div>
            <br>
            <br>
            <br>

            <div class="row  justify-content-center align-items-center d-flex">

                <div class="col-lg-6 col-md-7  col-sm-8 col-9   ">
                    <div class="row justify-content-end">

                        <img src="/SRS Screen Shorts/HalloDoc LOGO.png" alt="Hallodoc Logo" class="img-fluid min-h-100">
                    </div>

                    <div class="row mb-3 ">
                        <h2 class="d-inline d-flex justify-content-center">Reset Your Password</h2>
                    </div>

                    <form method="post">
                        <div class="row">
                            <div class="form-floating p-1 mb-3">
                                <input asp-for="Email" type="text" class="form-control input_field" id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword">Enter your email</label>
                                <span class="validation" asp-validation-for="Email"></span>
                            </div>

                        </div>
                        <div class="d-flex justify-content-lg-center">
                            <button type="submit" class="btn btn-info">
                                <span style="color:white">Reset Password</span>
                            </button>
                        </div>
                    </form>

                    <div class=" align-items-center justify-content-center d-flex">
                        <a href="/Home/login_page" style="text-decoration: none;" class="mt-3">
                            <img src="/SRS Screen Shorts/go-back-2.svg" width="25px" alt="">
                            <span class="text-info">Back to Login</span>
                        </a>
                    </div>
                    <div class="d-flex justify-content-center align-items-center foot">
                        <a href="#" class="text-muted text-decoration-none">
                            Terms and
                            Conditions
                        </a><span class="text-muted mx-3">|</span><a href="#"
                                                                     class="text-muted text-decoration-none">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>