@{
    TempData.Keep("UserName");
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/SRS Screen Shorts/HalloDoc.Icon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="~/js/script.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/PatientDashboardCSS.css" />
    <link rel="stylesheet" href="~/css/ViewDocumentsCSS.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <partial name="Notification" />
    <nav class="navbar ps-3  d-flex border-1 rounded ">

        <div class="">
            <a href="/">
                <img src="~/SRS Screen Shorts/HalloDoc LOGO.png" height="80vh" />
            </a>
        </div>
        <div class="d-flex  ">
            <div class="p-2 my-auto">
                <span>
                    Welcome <b>@TempData["UserName"]</b>
                </span>
            </div>
            <div class="p-2">
                <a asp-controller="Home" asp-action="logout" class="btn btn-outline-info" id="logout">
                    Logout
                </a>
            </div>
            <div class="p-2">
                <button class="btn btn-outline-info " onclick="darkMode()" id="darkmode">
                    <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="20px" viewBox="0 0 24 24" width="24px" fill="#01bce9"><rect fill="none" height="24" width="24" /><path d="M9.37,5.51C9.19,6.15,9.1,6.82,9.1,7.5c0,4.08,3.32,7.4,7.4,7.4c0.68,0,1.35-0.09,1.99-0.27C17.45,17.19,14.93,19,12,19 c-3.86,0-7-3.14-7-7C5,9.07,6.81,6.55,9.37,5.51z M12,3c-4.97,0-9,4.03-9,9s4.03,9,9,9s9-4.03,9-9c0-0.46-0.04-0.92-0.1-1.36 c-0.98,1.37-2.58,2.26-4.4,2.26c-2.98,0-5.4-2.42-5.4-5.4c0-1.81,0.89-3.42,2.26-4.4C12.92,3.04,12.46,3,12,3L12,3z" /></svg>
                </button>
            </div>
        </div>
    </nav>
    <hr class="m-0" />
    <div class="formdiv">
        <ul class=" ps-5 nav nav-tabs border-0 shadow" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a asp-controller="Home" asp-action="PatientDashboard" class="nav-link tabs active" id="dashboard-tab">Dashboard</a>
            </li>
            <li class="nav-item" role="presentation">
                <a asp-controller="Home" asp-action="PatientProfile" class="nav-link tabs" id="profile-tab">Profile</a>
            </li>
        </ul>

        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
        </script>

        @await RenderSectionAsync("Scripts", required: false)
        @await Component.InvokeAsync("Notyf")
    </div>
</body>
</html>